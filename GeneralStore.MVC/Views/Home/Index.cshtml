@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Store</h1>
    <p class="lead">General Store is a web app that allows users to check product in the general store.</p>
    @Html.ActionLink("Learn More About Us", "About")
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Our General Store, located in the farming community of New Jersey, is host to a multitude of farm fresh food and items of distinction.<br/> Come browse our products and see what we have for you.
        </p>
        @Html.ActionLink("Check Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large"})
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>View Customers With the link below.</p>
        @Html.ActionLink("Check Customers", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <div class="col-md-4">
        <h2>Contact Us</h2>
        <p>Click the button link below to contact us</p>
        <p><a class="btn btn-default" href="#">Contact Us &raquo;</a></p>
    </div>
</div>